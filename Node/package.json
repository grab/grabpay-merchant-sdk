{
  "name": "@grab/grabpay-merchant-sdk",
  "version": "2.0.0",
  "description": "GrabPay Merchant Integration SDK for Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "SEE LICENSE",
  "keywords": [
    "payment",
    "sdk"
  ],
  "author": "GrabTaxi Holdings Pte Ltd",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "build:docs": "jsdoc -c ./.jsdoc",
    "clean": "rimraf dist",
    "prettify": "prettier --write src/**/*.js",
    "lint": "eslint src examples --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "run-s clean build",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "buffer": "^6.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/example/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    },
    "collectCoverage": true,
    "setupFiles": [
      "./src/setupTestsGlobal.ts"
    ],
    "setupFilesAfterEnv": [
      "./src/setupTests.ts"
    ]
  },
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/parser": "^5.30.0",
    "docdash": "^1.2.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.1.0",
    "jest": "^28.1.1",
    "jest-date-mock": "^1.0.8",
    "jsdoc": "^3.6.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  }
}
